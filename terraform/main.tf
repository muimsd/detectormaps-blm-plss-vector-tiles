terraform {
  required_version = ">= 1.0"
  
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    archive = {
      source  = "hashicorp/archive"
      version = "~> 2.4"
    }
  }
}

provider "aws" {
  region  = "us-east-1"
  profile = "detectormaps"
  
  default_tags {
    tags = {
      Project     = "BLM-PLSS-Vector-Tiles"
      ManagedBy   = "Terraform"
      Environment = var.environment
    }
  }
}
